// Online C++ compiler to run C++ program online
#include <iostream>
using namespace std;

int main() {
   char gender;
   float tinggi, idealL, idealP;
   cout<< "AYO CEK BERAT BADAN IDEALMU" <<endl;
   cout<< "Masukkan gendermu (L/P) = ";
   cin>> gender;
   cout<< "Berapa tinggimu (cm) = ";
   cin>> tinggi;
   
   if (tinggi>=200){
       cout<< "Yakin dikss???";
   }
   else if (tinggi<=100){
       cout<< "Di isi yang bener dong, aelah";
   }
   else {
       switch (gender){
           case 'L':
           idealL = (tinggi-100)-(tinggi-100)*0.10;
           cout<< "Berat badan idealmu adalah = ";
           cout<< idealL;
           break;
           case 'P':
           idealP = (tinggi-100)-(tinggi-100)*0.15;
           cout<< "Berat badan idealmu adalah = ";
           cout<< idealP;
       }
   }
    return 0;
}
